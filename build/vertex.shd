#version 450

uniform mat4 world_camera;
uniform mat4 projection;

in vec3 position;
in vec3 normal;

vec3 color = vec3(0.337, 0.706, 1.0);

vec3 light_color = vec3(1.0, 1.0, 1.0);
vec3 light_position = vec3(1.0, 1.0, 5.0);

out vec3 vColor;

void main() {
    gl_Position = projection * world_camera * vec4(position, 1);
    vColor = color * dot(normal, normalize(light_position - position));
}
